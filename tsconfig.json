{
  "compilerOptions": {
    "target": "ES2015",
    "lib":["ES2017","DOM"],
    "module": "es2020",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src","custom.d.ts"],
  "exclude": ["node_modules"],
}
